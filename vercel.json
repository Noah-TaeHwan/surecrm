{
  "buildCommand": "npm run build",
  "outputDirectory": "build/client",
  "serverlessFunctionRegion": "icn1",
  "functions": {
    "build/server/index.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/build/server/index.js"
    }
  ],
  "headers": [
    {
      "source": "/build/client/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
